<form class="beer-form center-block"  {{action "submit" on="submit"}} enctype="multipart/form-data">
  <div class="form-group row">
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6">
      <label for="beerName">Beer Name</label>
      {{input type="text" placeholder="New beer"
              class="input-group form-control"
              value=form.beer_name}}
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6">
      <label for="brewer">Brewer</label>
      {{input type="text" placeholder="Brewer"
              class="input-group form-control"
              value=form.company_name}}
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6">
      <label for="style">Beer Style</label>
      {{input type="text" placeholder="Beer style"
              class="input-group form-control"
              value=form.beer_style}}
    </div>
  </div>
  <div class="row">
    <div class="form-group col-xs-4 col-sm-3 col-md-3 col-lg-3">
      <label for="style">ABV(%)</label>
      {{input type="number" step='00.1' value='00.0' placeholder="ABV"
              class="input-group form-control"
              value=form.abv}}
    </div>
    <div class="form-group col-xs-4 col-sm-3 col-md-3 col-lg-3">
      <label for="packaging">Packaging</label>
      <select class="form-control input-group" id="packaging" name="beer[packaging]">
        <option value="bottle">Bottle</option>
        <option value="draft">Draft</option>
        <option value="can">Can</option>
      </select>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6">
      <label for="appearance">Appearance</label>
      {{input type="textarea" placeholder="Appearance" rows="3"
              class="input-group form-control"
              value=form.appearance}}
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6">
      <label for="aroma">Aroma</label>
      {{input type="textarea" placeholder="Aroma" rows="3"
              class="input-group form-control"
              value=form.aroma}}
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6">
      <label for="palate">Palate</label>
      {{input type="textarea" placeholder="Palate" rows="3"
              class="input-group form-control"
              value=form.palate}}
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6">
      <label for="flavor">Flavor</label>
      {{input type="textarea" placeholder="Flavor" rows="3"
              class="input-group form-control"
              value=form.flavor}}
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6">
      <label for="notes">Notes</label>
      {{input type="textarea" placeholder="Notes" rows="3"
              class="input-group form-control"
              value=form.notes}}
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6">
      <label for="picture">Upload a picture</label>
      <input type="file" name="beer[photo]" class="form-control-file input-group" id="photo" aria-describedby="fileHelp">
    </div>
  </div>
  <div class="checkbox row">
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6">
      <label>
        <input type="checkbox" name="beer[drink_again]" value="false"> Would you drink this beer again?
      </label>
    </div>
  </div>
  <div class="checkbox row">
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6">
      <label>
        <input type="checkbox" name="beer[make_private]" value="false"> Make this beer private?
      </label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
